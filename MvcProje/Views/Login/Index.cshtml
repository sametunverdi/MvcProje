@model MvcProje.Models.Entity.TBLKULLANICILAR
@{
    ViewBag.Title = "Labels.LoginTitle";
    Layout = null;
}
@using Resources


<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <title>@Labels.LoginTitle</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #f5f5f5;
        }

        .login-container {
            margin-top: 100px;
            max-width: 400px;
            background-color: #e0e0e0;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        }

        .login-title {
            text-align: center;
            margin-bottom: 20px;
            font-weight: bold;
        }

        .form-control:focus {
            box-shadow: none;
            border-color: #001f3f;
        }

        .btn-primary {
            background-color: #b30000;
            border-color: #b30000;
        }

            .btn-primary:hover {
                background-color: #990000;
                border-color: #990000;
            }
    </style>
</head>
<body>
    <div class="container d-flex justify-content-center">
        <div class="login-container">
            <h3 class="login-title">@Labels.LoginTitle</h3>

            @if (ViewBag.hata != null)
            {
                <div class="alert alert-danger text-center">@Labels.LoginError</div>
            }

            <form method="post">
                <div class="mb-3">
                    <label for="KULLANICIAD" class="form-label">@Labels.Username</label>
                    <input type="text" name="KULLANICIAD" class="form-control" id="KULLANICIAD" required />
                </div>
                <div class="mb-3">
                    <label for="SIFRE" class="form-label">@Labels.Password</label>
                    <input type="password" name="SIFRE" class="form-control" id="SIFRE" required />
                </div>
                <div class="d-grid">
                    <button type="submit" class="btn btn-primary">@Labels.LoginButton</button>
                </div>
            </form>
            <div class="text-center mt-3">
                <a href="/Dil/Degistir?lang=tr" class="btn btn-sm btn-outline-secondary me-2">TR</a>
                <a href="/Dil/Degistir?lang=en" class="btn btn-sm btn-outline-secondary">EN</a>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
