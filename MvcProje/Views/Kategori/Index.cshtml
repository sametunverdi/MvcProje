@using MvcProje.Models.Entity
@model List<TBLKATEGORILER>
@*yukarıdakileri tanımlaman lazım*@


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>KATEGORİ ID</th>
        <th>KATEGORİ ADI</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
    </tr>
    <tbody>
        @foreach (var ktgr in Model)
        {
            <tr>
                <th>@ktgr.KATEGORIID</th>
                <td>@ktgr.KATEGORIAD</td>
                <td>
                    <a href="/KATEGORI/SIL/@ktgr.KATEGORIID" class="btn btn-danger btn-delete">Sil</a>
                </td>
                @*sweetalert yapmak için mainlayoutten burdan çekiyorum*@
                <td>
                    <a href="#" class="btn btn-success btn-update" data-id="@ktgr.KATEGORIID">Güncelle</a>
                </td>
                @*güncelleme butonu*@
            </tr>
        }
    </tbody>
</table>

<button class="btn btn-primary" data-toggle="modal" data-target="#addModal">
    Yeni Kategori Ekle
</button>    @*her sayfada modal buton ekle*@

<!-- EKLEME MODAL -->
<div class="modal fade" id="addModal" tabindex="-1" role="dialog" aria-labelledby="addModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="addModalLabel">Kategori Ekle</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <form id="addCategoryForm">
                    <div class="form-group">
                        <label>Kategori Adı</label>
                        <input type="text" name="KATEGORIAD" class="form-control" required />
                    </div>
                    <div class="form-group">
                        <label>Kategori Adı (İngilizce)</label>
                        <input type="text" name="KATEGORI_EN" class="form-control" required />
                    </div>
                    <button type="submit" class="btn btn-primary">Ekle</button>
                </form>
            </div>
        </div>
    </div>
</div>


<!-- Güncelleme Modal -->
<div class="modal fade" id="updateModal" tabindex="-1" role="dialog" aria-labelledby="updateModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Kategori Güncelle</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <form id="updateCategoryForm">
                    <input type="hidden" id="KATEGORIID" name="KATEGORIID" />

                    <div class="form-group">
                        <label>Kategori Adı</label>
                        <input type="text" id="KATEGORIAD" name="KATEGORIAD" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>İngilizce Adı</label>
                        <input type="text" id="KATEGORI_EN" name="KATEGORI_EN" class="form-control" />
                    </div>
                    <button type="submit" class="btn btn-primary">Güncelle</button>
                </form>
            </div>
        </div>
    </div>
</div>



<script>
    $("#addCategoryForm").submit(function (e) {
        e.preventDefault();

        var formData = {
            KATEGORIAD: $("input[name='KATEGORIAD']").val(),
            KATEGORI_EN: $("input[name='KATEGORI_EN']").val(),
        };

        $.ajax({
            url: '/Kategori/KategoriEkle',
            type: 'POST',
            data: formData,
            success: function (response) {
                if (response.success) {
                    $("#addModal").modal('hide');
                    location.reload();
                } else {
                    alert("Ekleme başarısız.");
                }
            },
            error: function () {
                alert("Hata oluştu.");
            }
        });
    });
    @*burda ekleme işlemi yapıyoruz*@


    $(document).on("click", ".btn-update", function () {
        var id = $(this).data("id");

        $.ajax({
            url: '/Kategori/KategoriGetir',
            type: 'GET',
            data: { id: id },
            success: function (data) {
                $("#KATEGORIID").val(data.KATEGORIID);
                $("#KATEGORIAD").val(data.KATEGORIAD);
                $("#KATEGORI_EN").val(data.KATEGORI_EN);
                $("#updateModal").modal("show");
            }
        });
    });
    @*burda güncelleme işlemi yapılırken verileri inputlara çekiyor*@

    $("#updateCategoryForm").submit(function (e) {
        e.preventDefault();

        var formData = {
            KATEGORIID: $("#KATEGORIID").val(),
            KATEGORIAD: $("#KATEGORIAD").val(),
            KATEGORI_EN: $("#KATEGORI_EN").val(),
        };

        $.ajax({
            url: '/Kategori/KategoriGuncelle',
            type: 'POST',
            data: formData,
            success: function (response) {
                if (response.success) {
                    $("#updateModal").modal('hide');
                    location.reload();
                } else {
                    alert("Güncelleme başarısız.");
                }
            }
        });
    });
    @* Formu Submit Edince Güncelleme Yapsın(güncelleme işlemini gerçekleştiriyor*@
</script>


