@using MvcProje.Models.Entity
@model List<TBLMUSTERILER>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>MÜŞTERİ ID</th>
        <th>MÜŞTERİ ADI</th>
        <th>MÜŞTERİ SOYADI</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
    </tr>
    <tbody>
        @foreach (var mus in Model)
        {
            <tr>
                <th>@mus.MUSTERIID</th>
                <td>@mus.MUSTERIAD</td>
                <td>@mus.MUSTERISOYAD</td>
                <td>
                    <a href="/Musteriler/SIL/@mus.MUSTERIID" class="btn btn-danger btn-delete">Sil</a>
                </td>
                @*sweetalert yapmak için mainlayoutten burdan çekiyorum*@
                <td><a href="/MUSTERI/GUNCELLE/@mus.MUSTERIID" class="btn btn-success">Güncelle</a></td>
            </tr>
        }
    </tbody>
</table>


<button class="btn btn-primary" data-toggle="modal" data-target="#addModal">
    Yeni Müşteri Ekle
</button>    @*her sayfada modal buton ekle*@


<!-- EKLEME MODAL -->
<div class="modal fade" id="addModal" tabindex="-1" role="dialog" aria-labelledby="addModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="addModalLabel">Müşteri Ekle</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <form id="addCustomerForm">
                    <div class="form-group">
                        <label>Müşteri Adı</label>
                        <input type="text" name="MUSTERIAD" class="form-control" required />
                    </div>
                    <div class="form-group">
                        <label>Müşteri Soyadı</label>
                        <input type="text" name="MUSTERISOYAD" class="form-control" required />
                    </div>
                    <button type="submit" class="btn btn-primary">Ekle</button>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    $("#addCustomerForm").submit(function (e) {
        e.preventDefault();

        var formData = {
            MUSTERIAD: $("input[name='MUSTERIAD']").val(),
            MUSTERISOYAD: $("input[name='MUSTERISOYAD']").val()
        };

        $.ajax({
            url: '/Musteriler/MusteriEkle',
            type: 'POST',
            data: formData,
            success: function (response) {
                if (response.success) {
                    $("#addModal").modal('hide');
                    location.reload();
                } else {
                    alert("Ekleme başarısız.");
                }
            },
            error: function () {
                alert("Hata oluştu.");
            }
        });
    });
    @* burda ekleme işlemi yapıyoruz*@
</script>
